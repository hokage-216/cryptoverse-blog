<!DOCTYPE html>
<html class="min-vh-100" lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    
        {{!-- Custom External CSS --}}
        <link rel="stylesheet" href="/css/main.css">
        
        {{!-- Title Conditional Logic --}}
        {{#if logged_in}}
        {{#if home}}<title>Home | CryptoVerse</title>{{/if}}
        {{#if dashboard}}<title>Dashboard | CryptoVerse</title>{{/if}}
        {{else}}
        {{#if home}}<title>Home | CryptoVerse</title>{{/if}}
        {{#if login}}<title>Login | CryptoVerse</title>{{/if}}
        {{#if signup}}<title>Sign Up | CryptoVerse</title>{{/if}}
        {{/if}}
    </head>
    <body class="container-fluid">

        {{!-- Body Conditional Logic --}}
        {{#if logged_in}}
        {{> logged-in-nav}}
        {{{body}}}
        {{else}}
        {{> logged-out-nav}}    
        {{{body}}}
        {{/if}}

        {{!-- Scripts --}}
        {{#if logged_in}}
        <script src="/js/logout.js"></script>
        <script src="/js/add-post.js"></script>
        <script src="/js/delete-post.js"></script>
        <script src="/js/edit-post.js"></script>
        {{/if}}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        <script src="/js/formValidation.js"></script>
        
    </body>
</html>