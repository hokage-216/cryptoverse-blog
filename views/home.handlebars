<div class="d-flex flex-column align-items-center">
    <h3 class="text-center mt-4">Recent Posts</h3>

    {{#if selected}}

        <div class="mt-4 col-md-6 text-decoration-none text-body">
            <div class="card ">
                <div class="card-header d-flex justify-content-between">
                    <h5 class="card-title">{{post.title}}</h5>
                    <div>Posted by {{post.user.username}} on {{format_date post.createdAt}}</div>
                </div>
                <div class="card-body"> 
                    <p class="card-text">{{post.content}}</p>
                </div> 
            </div>

            <div class="card mt-4">
                <div class="card-header ">
                    <h5 class="card-title">Comments</h5>
                </div>
                {{#each post.comments as |comment|}}
                <div class="card-body d-flex justify-content-between bg-light border-top"> 
                    <p class="card-text">{{comment.content}}</p>
                    <div class="text-secondary">Posted by {{comment.user.username}} on {{format_date comment.createdAt}}</div>
                </div>
                {{/each}}
                <form class="card-body d-flex flex-column justify-content-start" id="comment-form">
                    <label for="comment-content" class="mb-1 mt-1">Add Your Comment:</label>
                    <textarea class="form-control mt-1" id="comment-content" placeholder="What would you like to say?"></textarea>
                    <input type="number" class="d-none" id="postId" value="{{post.id}}">
                    <div class="d-flex flex-column align-items-center mt-2">
                        <button type="submit" class="btn btn-success mt-2" id="add-comment">Add Comment</button>
                    </div>
                </form>
            </div>

            <div class="d-flex flex-column align-items-center">
                <a href="/home" class="btn btn-secondary m-4">Back to Home</a>
            </div>
            
        </div>

    {{else}}

        {{#each posts as |post|}}
            <a href="/api/blog/add-comment/{{post.id}}" class="mt-4 col-6 text-decoration-none text-body">
                <div class="card ">
                    <div class="card-header d-flex justify-content-between">
                        <h5 class="card-title">{{post.title}}</h5>
                        <div>Posted by {{post.user.username}} on {{format_date post.createdAt}}</div>
                    </div>
                    <div class="card-body"> 
                        <p class="card-text">{{post.content}}</p>
                    </div>
                </div>
            </a>
        {{/each}}

    {{/if}}

</div>